@page "{id}"
@model ChangeProductPriceModel;

<form method="post">
    <div class="form-group">
        <label asp-for="Item.OldPrice" class="control-label"></label>
        <input asp-for="Item.OldPrice" class="form-control" readonly="true"/>
        <span asp-validation-for="Item.OldPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Item.ValidPrice" class="control-label"></label>
        <input asp-for="Item.ValidPrice" class="form-control" />
        <span asp-validation-for="Item.ValidPrice" class="text-danger"></span>
    </div>
    <input class="btn btn-success" type="submit" value="Change price"/>
</form>